// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

generator typegraphql {
  provider           = "typegraphql-prisma"
  output             = "../generated/type-graphql"
  emitTranspiledCode = true
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String        @id @default(cuid())
  lastName      String?
  firstName     String?
  username      String?       @unique
  email         String        @unique
  emailVerified DateTime?
  image         String?
  role          Role          @default(USER)
  accounts      Account[]
  sessions      Session[]
  settings      AppSettings[]
  watchlist    Watchlist[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model AppSettings {
  id        String   @id @default(cuid())
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@unique([name, userId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  providerType       String
  providerId         String
  providerAccountId  String
  refreshToken       String?
  accessToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([providerId, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String   @unique
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationRequest {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  movies    Movie[]
  series    Serie[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Director {
  id        Int      @id @default(autoincrement())
  name      String
  movies    Movie[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  series    Serie?   @relation(fields: [seriesId], references: [id])
  seriesId  Int?
}

model Actor {
  id        Int      @id @default(autoincrement())
  name      String
  movies    Movie[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  series    Serie?   @relation(fields: [seriesId], references: [id])
  seriesId  Int?
}

model Language {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  movies    Movie[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  series    Serie[]
  seriesId  Int?
}

model Movie {
  id         Int        @id @default(autoincrement())
  title      String
  year       Int
  rating     String
  release    DateTime
  runtime    Int
  genres     Genre[]
  directors  Director[]
  actors     Actor[]
  plot       String
  languages  Language[]
  poster     String
  imdbRating Float
  imdbID     String     @unique
  watchlist  WatchlistedMovie[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Serie {
  id           Int        @id @default(autoincrement())
  title        String
  year         Int
  rating       String
  release      DateTime
  runtime      Int
  genres       Genre[]
  directors    Director[]
  actors       Actor[]
  plot         String
  languages    Language[]
  poster       String
  imdbRating   Float
  imdbID       String     @unique
  totalSeasons Int
  seasons      Season[]
  watchlist   WatchlistedSerie[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Season {
  id         Int       @id @default(autoincrement())
  title      String
  index      Int
  episodes   Int
  episodeIds Episode[]
  series     Serie     @relation(fields: [seriesId], references: [id])
  seriesId   Int
  launchDate DateTime  @default(now())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([seriesId, index])
}

model Episode {
  id         Int    @id @default(autoincrement())
  title      String
  runtime    Int
  plot       String
  poster     String
  imdbRating Float
  imdbID     String @unique
  season     Season @relation(fields: [seasonId], references: [id])
  seasonId   Int
  watchlist  WatchlistedEpisode[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Watchlist {
  id Int @id @default(autoincrement())
  userId String
  default Boolean
  name String?
  user User @relation(fields: [userId], references: [id])
  movieWatchlist MoviesWatchlist?
  episodeWatchlist EpisodesWatchlist?
  seriesWatchlist SeriesWatchlist?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MoviesWatchlist {
  id Int @id
  watchlistId Int
  movies WatchlistedMovie[]
  watchlist Watchlist @relation(fields: [watchlistId], references: [id])
}

model WatchlistedMovie {
  movieId Int
  movie Movie @relation(fields: [movieId], references: [id])
  watchlistId Int
  watchlist MoviesWatchlist @relation(fields: [watchlistId], references: [id])
  addedAt DateTime @default(now())
  seen Boolean @default(false)
  seenAt DateTime?

  @@id([movieId, watchlistId])
}

model SeriesWatchlist {
  id Int @id
  watchlistId Int
  series WatchlistedSerie[]
  watchlist Watchlist @relation(fields: [watchlistId], references: [id])
}

model WatchlistedSerie {
  serieId Int
  serie Serie @relation(fields: [serieId], references: [id])
  watchlistId Int
  watchlist SeriesWatchlist @relation(fields: [watchlistId], references: [id])
  addedAt DateTime @default(now())
  seen Boolean @default(false)
  seenAt DateTime?

  @@id([serieId, watchlistId])
}

model EpisodesWatchlist {
  id Int @id
  watchlistId Int
  episodes WatchlistedEpisode[]
  watchlist Watchlist @relation(fields: [watchlistId], references: [id])
}

model WatchlistedEpisode {
  episodeId Int
  episode Episode @relation(fields: [episodeId], references: [id])
  watchlistId Int
  watchlist EpisodesWatchlist @relation(fields: [watchlistId], references: [id])
  addedAt DateTime @default(now())
  seen Boolean @default(false)
  seenAt DateTime?

  @@id([episodeId, watchlistId])
}